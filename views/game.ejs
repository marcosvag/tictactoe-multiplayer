<%- contentFor('body') %>
<%- include('./partials/_header') %>
<div id="main-content" class='game-container flex align-x align-y' data-id="<%= user %>">
    <h1 class="title">Tic-tac-toe Multiplayer</h1>
    <div class="code-container flex align-y">
        <p>Game code: <span id="room-code" class="room-code"><%= room%></span></p>
        <button id="copy-code-btn" class="copy-btn">Copy</button>
    </div>
    <div class="points-container">
        <div class="player-x players flex">Player X: <div class="points points-player-x"> 0 </div> points</div>
        <div class="player-o players flex">Player O: <div class="points points-player-o"> 0 </div> points</div>
    </div>
    <div class="sub-container"> 
        <svg height="416" width="416" class="win align-x align-y" id="048">
